extends Control


# -----------------------------------------------------------------------------
# Signals
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Export Variables
# -----------------------------------------------------------------------------
export var slide_out : bool = true
export var slide_duration : float = 0.25		setget set_slide_duration

# -----------------------------------------------------------------------------
# Variables
# -----------------------------------------------------------------------------
var _on_screen : bool = false

# -----------------------------------------------------------------------------
# Onready Variables
# -----------------------------------------------------------------------------
onready var text_node : TextEdit = $TextEdit

# -----------------------------------------------------------------------------
# Setters / Getters
# -----------------------------------------------------------------------------
func set_slide_duration(d : float) -> void:
	if d >= 0.0:
		slide_duration = d

# -----------------------------------------------------------------------------
# Override Methods
# -----------------------------------------------------------------------------
func _ready() -> void:
	connect("resized", self, "_on_resized")
	Log.connect("entry_logged", self, "_on_entry_logged")
	Log.connect("log_changed", self, "_on_log_changed")

# -----------------------------------------------------------------------------
# Handler Methods
# -----------------------------------------------------------------------------
func _on_resized() -> void:
	rect_min_size = Vector2(OS.window_size.x, OS.window_size.y * 0.5)
	

func _on_entry_logged(entry : Dictionary) -> void:
	pass

func _on_log_changed() -> void:
	pass

