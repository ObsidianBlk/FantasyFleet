extends Control

# -------------------------------------------------------------------------
# Export Variables
# -------------------------------------------------------------------------
export var visible_at_start : bool = false

# -------------------------------------------------------------------------
# Override Methods
# -------------------------------------------------------------------------
func _ready() -> void:
	visible = visible_at_start

# -------------------------------------------------------------------------
# Private Methods
# -------------------------------------------------------------------------



# -------------------------------------------------------------------------
# Public Methods
# -------------------------------------------------------------------------


# -------------------------------------------------------------------------
# Handler Methods
# -------------------------------------------------------------------------
func _on_ui_requested(ui_name : String) -> void:
	visible = (self.name == ui_name)
	if visible:
		grab_focus()

func _on_ui_toggle_requested(ui_name : String) -> void:
	if self.name == ui_name:
		visible = not visible
		if visible:
			grab_focus()
